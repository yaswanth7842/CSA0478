#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <unistd.h>

#define BUFFER_SIZE 1024

int main() {
    int sourceFile, targetFile;
    ssize_t bytesRead, bytesWritten;
    char buffer[BUFFER_SIZE];

    sourceFile = open("source.txt", O_RDONLY);
    if (sourceFile == -1) {
        perror("Error in opening source file");
        exit(EXIT_FAILURE);
    }

    targetFile = open("target.txt", O_WRONLY | O_CREAT | O_TRUNC, 0644);
    if (targetFile == -1) {
        perror("Error in opening target file");
        exit(EXIT_FAILURE);
    }

    while ((bytesRead = read(sourceFile, buffer, BUFFER_SIZE)) > 0) {
        bytesWritten = write(targetFile, buffer, (ssize_t)bytesRead);
        if (bytesWritten != bytesRead) {
            perror("Error in writing data to target file");
            exit(EXIT_FAILURE);
        }
    }

    if (bytesRead == -1) {
        perror("Error in reading data from source file");
        exit(EXIT_FAILURE);
    }

    if (close(sourceFile) == -1) {
        perror("Error in closing source file");
        exit(EXIT_FAILURE);
    }

    if (close(targetFile) == -1) {
        perror("Error in closing target file");
        exit(EXIT_FAILURE);
    }

    printf("File copy successful.\n");

    return 0;
}
